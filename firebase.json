{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "rewrites": [{
        "source": "**",
        "function": "api"
      }],
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
